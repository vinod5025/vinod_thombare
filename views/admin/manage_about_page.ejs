<%- include("navbar.ejs") %>

<div class="container-fluid card bg-white p-3 shadow">
    <div class="row">
        <div class="col-md-12">
            <h3 class="heading">About Section</h3>
        </div>
        <hr>
        <div class="col-md-12">
            <form action="/admin/update_about" method="post" enctype="multipart/form-data">
                <div class="row">
                    <div class="col-md-6 mt-3">
                        <label class="fw-bold">Profile Photo:</label>
                        <input type="file" accept="image/*" name="about_profile_photo" class="form-control border-primary rounded-pill ">
                        <% if (about.about_profile_photo) { %>
                            <img src="/uploads/<%= about.about_profile_photo %>" alt="Profile Photo" class="img-fluid mt-2" width="100">
                        <% } %>
                    </div>

                    <div class="col-md-6 mt-3">
                        <label class="fw-bold">Profile Name:</label>
                        <input type="text" name="about_profile_name" class="form-control border-primary rounded-pill " value="<%= about.about_profile_name || '' %>">
                    </div>

                    <div class="col-md-4 mt-3">
                        <label class="fw-bold">Profile Position:</label>
                        <input type="text" name="about_profile_position" class="form-control border-primary rounded-pill " value="<%= about.about_profile_position || '' %>">
                    </div>

                    <div class="col-md-4 mt-3">
                        <label class="fw-bold">Profile Email:</label>
                        <input type="email" name="about_profile_email" class="form-control border-primary rounded-pill " value="<%= about.about_profile_email || '' %>">
                    </div>

                    <div class="col-md-4 mt-3">
                        <label class="fw-bold">Profile Mobile No:</label>
                        <input type="tel" name="about_profile_mo" class="form-control border-primary rounded-pill " value="<%= about.about_profile_mo || '' %>">
                    </div>

                    <div class="col-md-12 mt-3">
                        <label class="fw-bold">Profile Summary:</label>
                        <textarea name="about_profile_summary" rows="3" class="form-control border-primary rounded-pill "><%= about.about_profile_summary || '' %></textarea>
                    </div>

                    <div class="col-md-12 mt-4 text-center">
                        <button type="submit" class="btn btn-primary rounded-pill">Update Profile</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


<!-- ðŸ“Š SKILLS SECTION -->
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 card shadow-lg p-4">
            <h3 class="text-center text-gradient heading">Add Your Skills</h3>
        <hr>


            <form action="/admin/add_skill" method="post">
                <div class="row">
                    <div class="col-lg-6 mt-3">
                        <label class="fw-bold">Tech Name:</label>
                        <input type="text" name="tech_name" class="form-control border-primary rounded-pill ">
                    </div>
                    <div class="col-lg-6 mt-3">
                        <label class="fw-bold">Tech Range:</label>
                        <input type="number" name="tech_range" min="0" max="100" class="form-control border-primary rounded-pill ">
                    </div>
                    <div class="col-12 text-center mt-4">
                        <button class="btn btn-primary  rounded-pill">Add Skill</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- ðŸ“Š Display Skills -->
<div class="container-fluid mt-5 shadow card p-3 table-responsive">
    <div class="row">
        <div class="col-md-12">
            <h3 class="heading text-center">All Skills</h3>
        <hr>
        </div>
            <div class="col-lg-12 ">
                <table class="table table-hover text-center ">
                    <thead class="table-primary">
                        <tr>
                            <th>Action</th>
                            <th>Technology</th>
                            <th>Proficiency (%)</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% skills.forEach(skill => { %>
                            <tr>
                                <td>
                                <a href="/admin/edit_skill/<%=skill.id%>">
                                    <button class="btn btn-secondary m-2">Edit</button>
                                </a>
                                <a href="/admin/delete_skill/<%=skill.id%>">
                                    <button class="btn btn-danger" onclick="return confirm('Are You Sure..!')">Del</button></td>
                                </a>
                                <td><strong><%= skill.tech_name %></strong></td>
                                <td><span class="badge bg-primary rounded-pill"><%= skill.tech_range %>%</span></td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


<%- include("footer.ejs") %>
