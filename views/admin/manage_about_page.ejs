<%- include("navbar.ejs") %>
<form action="/admin/update_about_page" method="post" enctype="multipart/form-data">
    <div class="container p-4 bg-white border shadow">
        <div class="row">
            <div class="col-md-12">
                <h3 class="heading">Edit About Page</h3>
            </div>
            <div class="col-md-6 mt-3">
                Profile Photo : 
                <input type="file" name="profile_photo" class="form-control" accept="image/*">
            </div>
            <div class="col-md-6 mt-3">
                <img src="/uploads/<%=about.profile_photo%>" width="100px" style="border-radius: 10px;" >
            </div>
            <div class="col-md-6 mt-3">
                Profile Name : 
                <input type="text" name="profile_name" class="form-control" value="<%=about.profile_name%>">
            </div>
            <div class="col-md-6 mt-3">
                Profile Position : 
                <input type="text" name="profile_position" class="form-control" value="<%=about.profile_position%>">
            </div>
            <div class="col-md-6 mt-3">
                Profile Email : 
                <input type="email" name="profile_email" class="form-control" value="<%=about.profile_email%>">
            </div>
            <div class="col-md-6 mt-3">
                Profile Phone : 
                <input type="number" name="profile_phone" class="form-control" value="<%=about.profile_phone%>">
            </div>
        </div>
        <div class="container  mt-3">
            <div class="row">
                <div class="col-md-12">
                    <h3>Skills :</h3>
                </div>
                <div class="col-md-4 mt-3">
                    <b class="text-success">HTML :</b>
                    <input type="text" name="skill_persentage_html" class="form-control" value="<%=about.skill_persentage_html%>">
                </div>
                <div class="col-md-4 mt-3">
                    <b class="text-success">Css :</b>
                    <input type="text" name="skill_persentage_css" class="form-control" value="<%=about.skill_persentage_css%>">
                </div>
                <div class="col-md-4 mt-3">
                    <b class="text-success">Bootstrap :</b>
                    <input type="text" name="skill_persentage_bootstrap" class="form-control" value="<%=about.skill_persentage_bootstrap%>">
                </div>
                <div class="col-md-4 mt-3">
                    <b class="text-success">JavaScript :</b>
                    <input type="text" name="skill_persentage_javascript" class="form-control" value="<%=about.skill_persentage_javascript%>">
                </div>
                <div class="col-md-4 mt-3">
                    <b class="text-success">Jquery :</b>
                    <input type="text" name="skill_persentage_jquery" class="form-control" value="<%=about.skill_persentage_jquery%>">
                </div>
                <div class="col-md-4 mt-3">
                    <b class="text-success">React :</b>
                    <input type="text" name="skill_persentage_angular" class="form-control" value="<%=about.skill_persentage_angular%>">
                </div>
                <div class="col-md-4 mt-3">
                    <b class="text-success">Ionic :</b>
                    <input type="text" name="skill_persentage_ionic" class="form-control" value="<%=about.skill_persentage_ionic%>">
                </div>
                <div class="col-md-4 mt-3">
                    <b class="text-success">NodeJs / Express Js :</b>
                    <input type="text" name="skill_persentage_node_express" class="form-control" value="<%=about.skill_persentage_node_express%>">
                </div>
                <div class="col-md-4 mt-3">
                    <b class="text-success">Mysql :</b>
                    <input type="text" name="skill_persentage_mysql" class="form-control" value="<%=about.skill_persentage_mysql%>">
                </div>
                <div class="col-md-6 mt-3">
                <b class="text-success"> Profile User Description :</b>
                    <textarea type="text" name="profile_user_desc"  rows="1" class="form-control">
                       <%=about.profile_user_desc%>
                    </textarea>
                </div>
                <div class="col-md-6 mt-3 text-center">
                    <br>
                    <button class="btn btn-primary">Save About Page</button>
                </div>
            </div>
        </div>
    </div>
</form>
<%- include("footer.ejs") %>

