<%- include("navbar.ejs") %>
<form action="/admin/update_count_section" method="post">
    <div class="container p-4 bg-white border shadow">
        <div class="row">
            <div class="col-md-12 mt-3">
                <h3 class="heading">Edit Counter Section Page</h3>
            </div>
            <div class="col-md-4 mt-3">
                <b class="text-success">Project Complete Count :</b>
                <input type="text" name="project_count" class="form-control" value="<%=counter.project_count%>">
            </div>
            <div class="col-md-4 mt-3">
                <b class="text-success">Year Experience Count :</b>
                <input type="text" name="expe_count" class="form-control" value="<%=counter.expe_count%>">
            </div>
            <div class="col-md-4 mt-3">
                <b class="text-success">Clients Count :</b>
                <input type="text" name="clients_count" class="form-control" value="<%=counter.clients_count%>">
            </div>
            <div class="col-md-12 mt-3 text-center">
                <br>
                <button class="btn btn-primary"> Save Counter Section</button>
            </div>
        </div>
    </div>
</form>
