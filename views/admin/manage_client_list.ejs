<%- include("navbar.ejs") %>
<form action="/admin/update_client_list" method="post" enctype="multipart/form-data">
    <div class="container p-4 bg-white border shadow">
        <div class="row">
         <div class="col-md-12 mt-3">
             <h3 class="heading">Client List</h3>
         </div>
         <div class="col-md-6 mt-3">
             <h4 class="text-primary">Client 1</h4>
            <b class="text-success"> Image :</b>
             <input type="file" name="client_photo_1" required class="form-control" accept="image/*">
         </div>
         <div class="col-md-6 mt-3">
            <img src="/uploads/<%=client_list.client_photo_1%>" width="100px">
         </div>
         <div class="col-md-6 mt-3">
             <b class="text-success">Client 1 Name</b>
             <input name="client_name_1" class="form-control" rows="1" value="<%=client_list.client_name_1%>">
         </div>
         <div class="col-md-6 mt-3">
             <b class="text-success">Client 1 Information</b>
             <textarea name="client_inform_1" class="form-control" rows="1"><%=client_list.client_inform_1%></textarea>
         </div>
         <div class="col-md-6 mt-3">
             <h4 class="text-primary">Client 2</h4>
            <b class="text-success"> Image :</b>
             <input type="file" name="client_photo_2" required class="form-control" accept="image/*">
         </div>
         <div class="col-md-6 mt-3">
            <img src="/uploads/<%=client_list.client_photo_2%>" width="100px">
         </div>
         <div class="col-md-6 mt-3">
             <b class="text-success">Client 2 Name</b>
             <input name="client_name_2" class="form-control" rows="1" value="<%=client_list.client_name_2%>">
         </div>
         <div class="col-md-6 mt-3">
             <b class="text-success">Client 2 Information</b>
             <textarea name="client_inform_2" class="form-control" rows="1"><%=client_list.client_inform_2%></textarea>
         </div>
         <div class="col-md-12 mt-3 text-center">
             <button class="btn btn-primary">Save Clients</button>
         </div>
        </div>
     </div>
</form>
<%- include("footer.ejs") %>