<!-- ======= Contact Section ======= -->
<section id="contact" class="py-5" style="background-color: #f8f9fa;">
  <div class="container">
    <div class="text-center mb-5">
      <h2 class="fw-bold text-primary">Get in Touch</h2>
      <p class="text-muted">We'd love to hear from you! Send us a message.</p>
    </div>

    <div class="row g-4">
      <!-- Contact Form -->
      <div class="col-md-6">
        <div class="card border-0 shadow-sm p-4 rounded-4">
          <h5 class="fw-bold text-primary mb-3">Send a Message</h5>
          <form action="/contact_now" method="post">
            <div class="mb-3">
              <input type="text" name="name" class="form-control rounded-3" placeholder="Your Name" required>
            </div>
            <div class="mb-3">
              <input type="email" name="email" class="form-control rounded-3" placeholder="Your Email" required>
            </div>
            <div class="mb-3">
              <input type="number" name="mobile" class="form-control rounded-3" placeholder="Your Mobile" required>
            </div>
            <div class="mb-3">
              <input type="text" name="subject" class="form-control rounded-3" placeholder="Subject" required>
            </div>
            <div class="mb-3">
              <textarea name="message" class="form-control rounded-3" rows="4" placeholder="Your Message" required></textarea>
            </div>
            <div class="text-center">
              <button type="submit" class="btn btn-primary px-4 py-2 rounded-pill">Send Message</button>
            </div>
          </form>
        </div>
      </div>

      <!-- Contact Details -->
      <div class="col-md-6">
        <div class="card border-0 shadow-sm p-4 rounded-4 bg-white">
          <h5 class="fw-bold text-primary mb-3">Contact Information</h5>
          <p class="text-muted"><%= contact_self.description %></p>
          <ul class="list-unstyled mb-3">
            <li class="mb-2"><i class="bi bi-geo-alt text-primary"></i> <%= contact_self.location %></li>
            <li class="mb-2"><i class="bi bi-phone text-primary"></i> +91 <%= contact_self.mobile %></li>
            <li class="mb-2"><i class="bi bi-envelope text-primary"></i> <%= contact_self.email %></li>
          </ul>
          <h6 class="fw-bold text-primary">Follow Us</h6>
          <div class="d-flex gap-3 mt-2">
            <a href="<%= contact_self.facebook_link %>" target="_blank" class="text-decoration-none">
              <i class="bi bi-facebook fs-4 text-primary"></i>
            </a>
            <a href="<%= contact_self.instagram_id %>" target="_blank" class="text-decoration-none">
              <i class="bi bi-instagram fs-4 text-danger"></i>
            </a>
            <a href="<%= contact_self.whatsapp_link %>" target="_blank" class="text-decoration-none">
              <i class="bi bi-whatsapp fs-4 text-success"></i>
            </a>
            <a href="<%= contact_self.linked_in_link %>" target="_blank" class="text-decoration-none">
              <i class="bi bi-linkedin fs-4 text-info"></i>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- ======= End Contact Section ======= -->



