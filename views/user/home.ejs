<%- include("navbar.ejs") %>
  <!-- ======= Hero Section ======= -->
  <div id="hero" class="hero route bg-image" style="background-image:url('/uploads/<%=home.backgound_image%>')" width="100%">
    <div class="overlay-itro"></div>
    <div class="hero-content display-table">
      <div class="table-cell">
        <div class="container">
          <!--<p class="display-6 color-d">Hello, world!</p>-->
          <h1 class="hero-title mb-4">I am <%=home.user_name%></h1>
          <p class="hero-subtitle"><span class="typed" data-typed-items="<%=home.position_1%>,  <%=home.position_2%>, <%=home.position_3%>"></span></p>
          <!-- <p class="pt-3"><a class="btn btn-primary btn js-scroll px-4" href="#about" role="button">Learn More</a></p> -->
        </div>
      </div>
    </div>
  </div><!-- End Hero Section -->
  <main id="main">
    <!-- ======= About Section ======= -->
    <section id="about" class="py-5 bg-light">
      <div class="container">
        <div class="row">
          <!-- Left Section: Profile Image & Basic Info -->
          <div class="col-lg-4 text-center">
            <div class="card shadow border-0 p-4">
              <img src="/uploads/<%= about.about_profile_photo %>" class="img-fluid rounded-circle shadow-lg" width="140" style="margin-left:100px ;">
              <h4 class="mt-3 text-dark"><%= about.about_profile_name %></h4>
              <p class="text-muted"><%= about.about_profile_position %></p>
              <hr>
              <p><i class="bi bi-envelope text-primary"></i> <%= about.about_profile_email %></p>
              <p><i class="bi bi-phone text-success"></i> +91 <%= about.about_profile_mo %></p>
            </div>
          </div>
    
          <!-- Right Section: About Me & Skills -->
          <div class="col-lg-8">
            <div class="card shadow border-0 p-4">
              <h3 class="fw-bold text-primary mb-3">About Me</h3>
              <p class="lead text-muted"><%= about.about_profile_summary %></p>
    
              <h4 class="fw-bold text-dark mt-4">Skills</h4>
              <div class="row">
                <% skills.forEach(skill => { %>
                  <div class="col-md-6 mb-4">  <!-- Added bottom padding -->
                    <div class="d-flex justify-content-between">
                      <span class="fw-bold"><%= skill.tech_name %></span>
                      <span class="text-muted"><%= skill.tech_range %>%</span>
                    </div>
                    <div class="progress" style="height: 10px; border-radius: 5px; overflow: hidden;">
                      <div class="progress-bar bg-primary progress-hover" role="progressbar" 
                        style="width: <%= skill.tech_range %>%;" 
                        aria-valuenow="<%= skill.tech_range %>" 
                        aria-valuemin="0" aria-valuemax="100">
                      </div>
                    </div>
                  </div>
                <% }) %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- ======= Services Section (project section) ======= -->
    <section id="services" class="services-mf pt-5 route">
      <div class="container">
        <div class="row">
          <div class="col-sm-12">
            <div class="title-box text-center">
              <h3 class="title-a heading text-center p-0 rounded">
                Projects
              </h3>
              <p class="subtitle-a">
               <!-- <%=project.project_description%> -->
              </p>
              <div class="line-mf"></div>
            </div>
          </div>
        </div>
        <div class="row">
          <% project.map((row,i)=>{ %>

          
                  <div class="col-md-4 mb-5">
                      <div class="card text-center shadow-lg border-0" style="height: 400px;">
                          <div class="card-body d-flex flex-column align-items-center justify-content-between p-4">
                              
                              <!-- Circular Link Button -->
                              <a href="<%=row.project_link%>" target="_blank" class="btn btn-primary rounded-circle d-flex justify-content-center align-items-center" style="width: 70px; height: 70px;">
                                  ðŸ”—
                              </a>
          
                              <!-- Project Title -->
                              <h5 class="card-title mt-3 fw-bold"><%=row.project_name%></h5>
          
                              <!-- Project Description -->
                              <p class="card-text flex-grow-1 px-2"><%=row.project_description%></p>
          
                              <!-- View More Button -->
                              <a href="<%=row.project_link%>" target="_blank" class="btn btn-outline-primary w-100">View Project</a>
                              
                          </div>
                      </div>
                  </div>
              
            <%  }) %> 
          
        </div>
      </div>
    </section><!-- End Services Section -->

<!-- ======= Counter Section ======= -->
<div class="container-fluid text-white text-center py-5" style="background: url('/user/img/counters-bg.jpg') center/cover no-repeat; position: relative;">
